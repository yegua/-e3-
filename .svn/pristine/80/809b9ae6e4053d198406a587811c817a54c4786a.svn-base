/* pages/echart-column/echart-column.wxss */
#container {
    width: 100%;
    height: 100%;
    background-color: lightgoldenrodyellow;
    margin-top: 5px;
    position: relative;
    overflow: hidden;
}
canvas{
    width: 100%;
    height: 70%;
    transform: scale(1);
    padding-top: 30px;
}
.section_title{
    text-align: center;
    padding: 8px 0;
}
#container .section, #container .selectTime{
    position: absolute;
    left: 0;
    bottom: 55px;
    width: 100%;
    padding: 10px 0;
    background-color: #f1f1f1;
}
#container .selectTime{  
    padding: 0 5px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    bottom:10px;
    height:30px;
}
#container .selectTime view{
    position: absolute;
    top: 0;
    width: 33%;
    height: 26px;
    line-height: 30px;
}

#container .selectTime .hide{
    display: none;
}
#container .selectTime .show{
    display: inline-block;
}
#container .selectTime view:nth-child(1){
    left: 0;
    background: #f1f1f1;
}
#container .selectTime view:nth-child(2),#container .selectTime view:nth-child(3){
    left: 33.3%;
    background: #f1f1f1;
}
#container .selectTime view:nth-child(2){
    background: #f1f1f1 url(../../images/green_tri.png) no-repeat center center;
    background-size: 1.5em;
}
#container .selectTime view:nth-child(3){
    text-align: center;
}
#container .selectTime view:nth-child(4){
    left: 66.6%;
    text-align: right;
    background: #f1f1f1;
}
#container .pickerSelect{
    width: 100%;
    display: flex;
}
picker{
     width: 45%;
     border: 1px solid #ccc; 
     border-radius: 3px;
     margin: 5px;
    font-size: 16px; 
    padding: 0 0 5px 5px;
}