/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  position: relative;
}
swiper-item image {
    width:100%;
}
.search-input {
  width: 100%;
  padding: 8px 10%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  text-align: center;
  background: url(../../images/picker_search.png) no-repeat 85% center;
  background-size: 40rpx;
}
.search-input input{
  width: 100%;
  padding: 0 20px;
  height: 1.8rem;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border: 1px solid #cccccc;
  border-radius: 5px;
}
