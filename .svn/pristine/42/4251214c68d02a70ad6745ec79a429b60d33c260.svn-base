
.flex-item{
    width: 100%;
    display: -webkit-flex;
    display: -webkit-box;
    display: flex;
    flex-wrap: wrap;
    -webkit-flex-wrap: wrap;
}
.flex-item .index-menu-item{
    -webkit-box-flex: 33%;
    -webkit-flex: 33%;
    flex: 33%;
    max-width: 33%;
    padding: 10px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    text-align: center;
}
.flex-item .index-menu-item image{
    width: 80%;
    height: 100px;
}
.flex-item .index-menu-item text{
   display: block;
   width: 80%;
   font-size: 26rpx;
   white-space: wrap;
   word-break: break-all;
   line-height: 1.2;
   text-align: center;
}