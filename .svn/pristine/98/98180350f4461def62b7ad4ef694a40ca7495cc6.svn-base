/**app.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.ui-container {
    width: 100%;
    height: 100%;
    background-image: url(http://oqecsd659.bkt.clouddn.com/login_bg.png);
    background-size: 100% 100%;
}
.fun-title {
    width: 100%;
    height: 1.6rem;
    line-height: 1.6rem;
    font-size: 1rem;
    background: #0099cd;
    color: #fff;
    margin: 10px 0;
    padding-left: 10px; 
}
#chart-container {
    width: 100%;
    height: 100%;
    padding-top: 10px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
}
canvas{
    width: 100%;
    height: 65%;
    margin-top: 40px;
}
.section-title{
    width: 100%;
    text-align: center;
    padding: 8px 0;
}
#chart-container swiper {
    width: 100%;
   height: 400px;
   position: relative;
}
#chart-container swiper .dots{
  width: 100%;
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;
}
#chart-container swiper .dots .dot{
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  margin: 5px;
  border-radius: 100%;
  background: #E6F3F9;
  font-size: 14px;
}
#chart-container swiper .dots .dot.active{
  background: #f60;
  color: #fff;
}
#chart-container .section, #chart-container .selectTime{
    position: absolute;
    left: 0;
    bottom: 40px;
    width: 100%;
    padding: 10px 0;
    background-color: #ddd;
}
#chart-container .selectTime{  
    padding: 5px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    bottom:0;
    height:40px;
    background-color: #efefef;
}
#chart-container .selectTime view{
    position: absolute;
    top: 0;
    width: 33%;
    height: 40px;
    line-height: 40px;
    box-sizing: border-box;
}

#chart-container .selectTime .hide{
    display: none;
}
#chart-container .selectTime .show{
    display: inline-block;
}
#chart-container .selectTime view:nth-child(1){
    left: 0;
    padding-left: 10px;
}
#chart-container .selectTime view:nth-child(2),#chart-container .selectTime view:nth-child(3){
    left: 33.3%;
}
#chart-container .selectTime view:nth-child(2){
    background: url(http://oqecsd659.bkt.clouddn.com/green_tri.png) no-repeat center center;
    background-size: 1.5em;
}
#chart-container .selectTime view:nth-child(3){
    text-align: center;
}
#chart-container .selectTime view:nth-child(4){
    left: 66.6%;
    text-align: right;
    padding-right: 10px;
}
#chart-container .pickerSelect{
    width: 100%;
    display: flex;
}
picker{
    width: 45%;
    margin: 5px;
    background: #fff url(http://oqecsd659.bkt.clouddn.com/picker_search.png) no-repeat 3% center;
    background-size: 40rpx;
    font-size: 16px; 
    padding: 5px 35px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    border: 1px solid #161616;
    border-radius: 3px;
}
.flex {
     display: -webkit-flex;
    display: -webkit-box;
    display: flex;
}
.flex-pack-center{
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
}
.flex-align-center{    
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
}
.flex-pack-justify{
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    -ms-flex-pack: justify;
    justify-content: space-between;
}
.flex-pack-around{
    -webkit-box-pack: justify;
    -webkit-justify-content: space-around;
    -ms-flex-pack: justify;
    justify-content: space-around;
}
.flex-hw {
  /* 09版 */
  /*-webkit-box-lines: multiple;*/
  /* 12版 */
  -webkit-flex-wrap: wrap;
  -moz-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  -o-flex-wrap: wrap;
  flex-wrap: wrap;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.2rem;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
/*.table .tr:nth-child(even) {
  background: pink;
}*/
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.table .bg-w{
  background: rgba(70,130,180,.8);
  color: #fff;
}
.table .bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  display: flex;
  height: 2.2rem;
  align-items: center;
}
.ui-total-statistics{
    width: 100%;
		padding: 15px;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;
		margin-bottom: 5px;			
		border-radius: 5px;
		background-color: #fff;
}
.ui-total-statistics label{
      width: 45%;
			padding: 10px;
			border-radius: 5px;
			text-align: center;
			border: 1px solid #ddd;
			font-size: 18px;		
}
.ui-total-statistics label:nth-child(1){
			margin-right: 5%;
		}
.ui-total-statistics text {
      width: 55%;
			padding: 5px 0;
			border: none;
			display: block;
			text-align: center;
			width: 100%;
			font-size: 26px;
			color: red;
			font-weight: 600;
}
.ui-warehouse-lists {
    width: 100%;
    padding: 15px;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;
		background-color: #fff;
}
.ui-warehouse-lists text {
    display: block;
    padding: 12px; 
		border-radius: 3px;
    font-size: 16px;
}
.ui-warehouse-lists text.selected{
			background-color: #e9967a;
			color: #fff;
			font-weight: 800;
}