/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  position: relative;
}
.ui-container {
    width: 100%;
    height: 100%;
    background-image: url(../../images/login_bg.png);
    background-size: cover;
}
.login-form{
  position: absolute;
  left: 12%;
  top: 30%;
  width: 76%;
  padding: 20px 0;
  box-sizing: border-box;
}
.login-form form {
  display: block;
  width: 100%; 
  border-radius: 6px;
  background: #fff;
  padding: 10px 20px;
  box-sizing: border-box;
}
.login-form input{
  padding: 10px 0 10px 40px;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}
#mobile-num {
    background: url(../../images/login_phone.png) no-repeat left center;
    background-size: 40rpx;
}
#user-name {
    background: url(../../images/login_user.png) no-repeat left center;
    background-size: 40rpx;
}
#psw-info {
    background: url(../../images/login_password.png) no-repeat left center;
    background-size: 40rpx;
}
#btn-submit {
  color: #fff;
	font-weight: bold;
	font-size: 18px;
	width: 100%;
	height: 36px;
	line-height: 26px;
	margin: 10% 0px 10px 0px;
	border-radius: 4px;
	background-color: #F05A1E;
	background-size: 100%;
	z-index: 998;
}