// pages/query/selectExpress/selectExpress.js
var util = require('../../../utils/util.js');
//获取应用实例
var app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    newcode: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log(options);
    var self = this;
    if(options.code){
        self.setData({
          newcode: options.code
        });
        wx.request({
          url: 'http://kjgz.szmsd.com/query/queryAction!match.action?chars=' + options.code,
          method: 'POST', // OPTIONS, GET, HEAD, POST, PUT, DELETE, TRACE, CONNECT
          dataType: 'json',
          headers: {
            'Content-Type': 'application/json'
          },
          success: function (res) {
            var dataList = res.data;
            self.setData({
              listData: dataList
            })
          }
        })
    };  
  },
  selectedList: function(e){
      var _name = e.target.dataset.name;
      var self = this;
      if(_name=='其他快递'){
        wx.navigateTo({
          url: '/pages/query/otherExpress/otherExpress?code=' + self.data.newcode,
        });
      }else{
        wx.redirectTo({
          url: '/pages/query/kuaijiangz/kuaijiangz?billcode=' + self.data.newcode + '&name=' + e.currentTarget.dataset.name
        });
      }
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
  
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
  
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
  
  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
  
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
  
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  }
})