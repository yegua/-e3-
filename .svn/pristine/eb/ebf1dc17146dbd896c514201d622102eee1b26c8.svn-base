// pages/query/kuaijiangz/kuaijiangz.js
var startX, startY, endX, endY, key, maxRight = 60;
Page({

  /**
   * 页面的初始数据
   */
  data: {
    code: '',
    expressName: '请选择快递公司',
    diabledColor: '#C5C3C3',
    historyToggle: false,
    historyToggleno: true,
    showPopover: true,
    historyListData:[{
      billcode: '543545454',
      type: '中通快递',
      right: 0,
      startRight: 0,
      id: '001'
    },
      {
        billcode: '783545454',
        type: '申通快递',
        right: 0,
        startRight: 0,
        id: '002'
      }],
    listData: [
      {id: '01',data: '申通快递'},
      { id: '02', data: '中通快递' },
      {id: '03', data: '国通快递' },
      {id: '04', data: '圆通快递' },
      {id: '05', data: '韵达快递' },
      {id: '06', data: '顺丰快递' },
      {id: '07', data: '邮政小包' },
      {id: '08', data: '加运美' }
    ]

  },
  drawStart: function(e){
    console.log('start');
    var touch = e.touches[0];
    startX = touch.clientX;
    startY = touch.clientY;
    var items = this.data.historyListData;
    for (var i in items) {
      var data = items[i];
      data.startRight = data.right;
    }
    key = true;
  },
  drawMove: function(e){
    var self = this;
    var dataId = e.currentTarget.id;
    var items = this.data.historyListData;
    if (key) {
      var touch = e.touches[0];
      endX = touch.clientX;
      endY = touch.clientY;
      console.log("startX=" + startX + " endX=" + endX);
      if (endX - startX == 0)
        return;
      var res = items;
      //从右往左滑动

      if ((endX - startX) < 0) {
        for (var k in res) {
          var data = res[k];
          if (res[k].id == dataId) {
            var startRight = res[k].startRight;
            var change = startX - endX;
            startRight += change;
            if (startRight > maxRight)
              startRight = maxRight;
            res[k].right = startRight;
          }
        }
      } else {//从左往右滑动
        for (var k in res) {
          var data = res[k];
          if (res[k].id == dataId) {
            var startRight = res[k].startRight;
            var change = endX - startX;
            startRight -= change;
            if (startRight < 0)
              startRight = 0;
            res[k].right = startRight;
          }
        }
      }
      self.setData({
        historyListData: items
      });
    }
  },
  drawEnd: function(e){
    console.log('end');
    var items = this.data.historyListData;
    for (var i in items) {
      var data = items[i];
      if (data.right <= 100 / 2) {
        data.right = 0;
      } else {
        data.right = maxRight;
      }
    }
    this.setData({
      historyListData: items
    });
  },
  //删除历史记录
  deleteHistoryRecordFn: function(e){
      var id = e.target.dataset.id,
      self = this;
      var items = this.data.historyListData;
      var newItem = [];
      for(var i=0;i<items.length;i++){
          if(items[i].id!=id){
            newItem.push(items[i])
          }
      };
      this.setData({
        historyListData: newItem
      });
      if (newItem.length==0){
          self.setData({
              historyToggle: true,
              historyToggleno: false
          })
      }

  },
  //一键清除所有历史记录
  clearHistoryListFn: function(){
    var items = this.data.historyListData;
    items.length = 0;
    this.setData({
        historyListData: items,
        historyToggle: true,
        historyToggleno: false
    });
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
      var self = this;
      if(wx.getStorageSync('code')){
          self.setData({
            code: wx.getStorageSync('code')
          })
      };
  },
  queryCodeFn: function(){
    this.setData({
      diabledColor: '#DE7D33'
    })
  },
  bindChangeinput: function(e){
    var _code = e.detail.value;
    var self = this;
    console.log(_code.length);
    if(_code.length>=6){
        self.setData({
          showPopover: false
        })
    }else{
      self.setData({
        showPopover: true
      })
    };
    this.setData({
      code: e.detail.value
    })
  },
  selectedList: function(){
    this.setData({
      showPopover: true
    })
  },
  /**扫码 */
  scanCode: function () {
    var self = this;
    wx.scanCode({
      onlyFromCamera: true,
      success: function (res) {
        var _scanCode = res.result;
        self.setData({
          code: _scanCode
        })
       
      },
      fail: function (res) { },
      complete: function (res) { },
    })
  },
  selectExpress: function(){
    var self = this;
    wx.navigateTo({
      url: '/pages/query/selectExpress/selectExpress?code='+self.data.code,
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
  
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
  
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
  
  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
  
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
  
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  }
})