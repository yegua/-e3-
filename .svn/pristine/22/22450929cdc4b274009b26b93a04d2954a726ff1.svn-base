.user-title {
    color: #161616;
    background: #fff;
    margin: 0;
    border-bottom: 1px solid #ccc;
}
.user-info {
    width: 100%;
    display: -webkit-flex;
    display: -webkit-box;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #ccc;
}
.user-info view {
    padding: 25px; 
}
.user-info .user-img{   
    background: url(../../images/icon_user.png) no-repeat center center;
    background-size: 70rpx;
}