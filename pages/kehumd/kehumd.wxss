/* pages/kehumd/kehumd.wxss */
#chart-container {
  overflow-y: auto;
  height: 100%;
  position: relative;
}
.search-box {
    width: 100%;
    background: #ffffff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    padding: 10px;
}
.search-input{
  width: 80%;
  height: 30px;
  border: 1px solid #ccc;
  border-radius: 3px;
  padding-left: 10px;
  font-size: 12px;
}
.showSlectedLetter{
    background-color: rgba(0, 0, 0,0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top:50%;
    left: 50%;
    margin: -50px;
    width: 100px;
    height: 100px;
    border-radius:10px; 
    font-size: 26px;
    z-index: 1
}
.kc-title {
  padding: 10px 20px;
  border-bottom: 1px solid #ccc;
}
#content-box {
    width: 100%;
    margin-top: 50px;
}
.ui-content-lists { 
  border-bottom: 1px solid #ccc;
}
.content-lists view:nth-child(1){
   width: 100%;
   -webkit-box-sizing: border-box;
   box-sizing: border-box;
    padding-left: 20px;
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #dcdcdc;
}
.content-lists view:nth-child(2){   
    padding: 10px 20px 10px 0;
}
.ui-letter {
    width: 100%;
    background: #ccc;
    padding-left: 20px;
    height: 30px;
    line-height: 30px;
}
.mui-indexed-list-bar{
    width: 30px;
	  background-color: #f5f5f5;
	  position: fixed;
	  height: 100%;
	  z-index: 100;
	  right: 0;
    top: 0;
	  -webkit-transition: .2s;
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-align: center;
}
.mui-indexed-list-bar view {
	text-align: center;
	font-size: 12px;
	padding: 0px;
	margin: 0px;
	line-height: 20px;
	color: #aaa;
}
.mui-indexed-list-bar view.active{
    color:#ff6600;
    background: antiquewhite;
    font-size: 14px;
}