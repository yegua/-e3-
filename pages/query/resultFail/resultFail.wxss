.mui-title{
  text-align: center;
  padding: 10px 0;
}
.ui-result-tip {
    color: #FF0000;
    font-weight: bolder;
	  line-height: 42px;
    text-align: center;
    margin: 10px;
    border: 1px dashed #E6E2E2;
    border-radius: 4px;
}

.ui-result-tip {
	padding: 0px 10px;
	background: url(http://oqecsd659.bkt.clouddn.com/icon_alarm.png) no-repeat 22% 50%;
	background-size: 1.2em;
}

.ui-result-company {
	margin: 10px;
	line-height: 42px;
}

.ui-company-name {
	font-weight: bolder;
}

.ui-btn-layout {
	width: 100%;
	padding: 10px 20px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.ui-company-phone, .ui-company-website {
	  display: inline-block;
	  color: #FFFFFF;
    text-align: center;
    width: 100%;
    height: 32px;
    padding: 0;
    border: none;
    line-height: 32px;
    border-radius: 4px;
    background-color: #EC9A43;
}

.ui-company-phone {
	background: #EC9A43 url(http://oqecsd659.bkt.clouddn.com/icon_phone.png) no-repeat 25% 50%;
	background-size: 1.2em;
}
